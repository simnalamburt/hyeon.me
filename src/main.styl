// Always use border-box
* { box-sizing: border-box }

// Custom markdown style
.markdown-body small { color: gray }

width = 890px
padding = 20px

header
  padding: 20px padding
  background: #fcfcfc
  display: flex
  justify-content: center
  align-items: center

  profile-width = 220px
  profile-padding = 30px
  a#me
    padding-right: profile-padding
    img
      width: profile-width
      border-radius: 10px

  article#header
    max-width: width - padding*2 - profile-width - profile-padding
    width: 100%

article#main
  max-width: width
  margin: 0 auto
  padding: 20px padding
